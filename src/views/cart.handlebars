<link rel="stylesheet" href="/css/cart.css">
<main>
    <h1>Carrito de compras</h1>
    <section class="product-container-cart" id="{{session.user.cart}}">
        {{#each products as |product|}}
        <div class="product" id="{{product._id}}">
            <div class="product-info">
                <img src="/img/ps4.jpg" alt="productIMG">
                <div class="product-text">
                    <h3>{{product.name}}</h3>
                    <p>${{product.price}}</p>
                    {{#if (moreThanOne product.quantity)}}
                    <small>{{product.quantity}} unidades</small>
                    {{else}}
                    <small>{{product.quantity}} unidad</small>
                    {{/if}}
                </div>
            </div>
            <div class="product-buttons">
                <button class="restToCart">-</button>
                <button class="addToCart">+</button>
            </div>
        </div>
        {{/each}}
    </section>

</main>

<script src="/js/cart.js"></script>